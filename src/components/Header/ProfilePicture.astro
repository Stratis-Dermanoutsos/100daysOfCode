---
type Props = {
	size: number;
};
const { size } = Astro.props;
---

<style lang="scss">
    img {
        border-color: var(--theme-accent);
        border-radius: 100%;
        border-style: solid;
        border-width: 0px;
        transition: all 0.2s ease-out;

        &:hover {
            border-width: 2px;
        }
    }
</style>

<img
    alt="Stratis Dermanoutsos profile picture"
    src="https://github.com/Stratis-Dermanoutsos.png"
    width={size}
    height={size}
>